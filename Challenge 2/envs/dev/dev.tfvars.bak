#Global 
region      = "us-east-1"
regionAlias = "US_East"

#VPC

cidr_block = 10.0.0.0/16
enable_dns_support   = true
enable_dns_hostnames = true

#Subnet

subnets = [{
    name = "public_subnet_1"
    az = "us-east-1a"
    cidr_block = "10.0.1.0/24"
    type = "public"
},{
    name = "public_subnet_2"
    az = "us-east-1b"
    cidr_block = "10.0.2.0/24"
    type = "public"
},
{
    name = "private_subnet_1"
    az = "us-east-1a"
    cidr_block = "10.0.11.0/24"
    type = "private"
},
{
    name = "private_subnet_2"
    az = "us-east-1b"
    cidr_block = "10.0.12.0/24"
    type = "private"
},
]


# NAT

nat_names = ["nat-az1", "nat-az2"]

#Security Group 

SG = [
  {
    name        = "alb-sg"
    description = "Allow HTTP from internet"
    vpc_id      = "vpc-xxxx"
  },
  {
    name        = "ec2-sg"
    description = "Allow HTTP from ALB only"
    vpc_id      = "vpc-xxxx"
  }
]

rules = [
  {
    sg_name         = "alb-sg"
    from_port       = "80"
    to_port         = "80"
    cidr_ipv4       = "0.0.0.0/0"
    source_sg_name  = null
    ip_protocol     = "tcp"
  },
  {
    sg_name         = "ec2-sg"
    from_port       = "80"
    to_port         = "80"
    cidr_ipv4       = null
    source_sg_name  = "alb-sg"
    ip_protocol     = "tcp"
  }
]


ec2_instance = [
  {
    instance_type = "t3.micro"
    key_name = "key.pem"
    monitoring = true
    subnet_id = 
  }
]